<div class="transparentbox">
  <h2>PROFILE</h2>
  <div>
    <h3>Welcome Back, <%= currentUser.firstname%>!</h3>
    <a href='/appointment'><button type="button" class="btn btn-default btn-lng">Search for Spas or Schedule an appointment</button></a>

    <% if(appointment.length <=0) { %>
      <h2 class='text-center'>No Spa Time appointment</h2>
    <%} else {%>
    <% appointment.forEach(function(appointment){%>
    <div class="list">
      <br>
      <ul>
          <div><li><h4><%= appointment.date %></h4></li></div>
          <div><li><h4><%= appointment.time %></h4></li></div>
          <div><li><h4><%= appointment.spa %></h4></li></div>
      </ul>
          <a href="/event/<%=appointment.id%>" class="btn btn-danger glyphicon glyphicon-trash delete-Spa"></a>
    </div>
    <% }) %>
    <% }; %>
  </div>
</div>
