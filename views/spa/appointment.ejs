<form action="/spa/yelp" method="post">
    <div class="transparentbox">
      <h2 class='text-center'>Search for Spas</h2>
      <div class="form-group">
        <label>Search:</label>
          <input type="text" name="spa" class="form-control" placeholder="Search for Local Spas" required>
        </div>
        <input type="submit" value="Search" class="btn btn-success">
    </form>
    <hr>
    <h2 class = 'text-center'>Set Appointment</h2>
    <form action="/spa/appointment" method="post">
      <div class="form-group">
        <label>Service:</label>
        <input type="text" name="service" class="form-control" placeholder="Massage, waxing..." required>
      </div>
      <div class="form-group">
        <label>Date:</label>
        <input type="date" name="date" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Time:</label>
        <input type="time" name="time" class="form-control" required>
      </div>
      <input type="submit" value="Submit" class="btn btn-success">
    </div>
</form>
