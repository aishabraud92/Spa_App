<form action="/auth/signup" method="POST">
  <div class="form-group">
    <label for="authEmail">EMAIL</label>
    <input id="authEmail" class="form-control" placeholder="valid email" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authName">NAME</label>
    <input id="authName" class="form-control" placeholder="first, last name" type="text" name="name">
  </div>

  <div class="form-group">
    <label for="authPassword">PASSWORD</label>
    <input id="authPassword" class="form-control" placeholder="5 to 10 characters" type="password" name="password">
  </div>

  <input class="btn btn-primary" type="submit">
</form>
