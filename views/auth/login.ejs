<form action="/auth/login" method="POST">
  <div class="form-group">
    <label for="authEmail">EMAIL</label>
    <input id="authEmail" class="form-control" placeholder="valid email" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authPassword">PASSWORD</label>
    <input id="authPassword" class="form-control" placeholder="password here" type="password" name="password">
  </div>

  <input class="btn btn-primary" type="submit">
</form>
